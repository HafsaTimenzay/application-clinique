<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.gestionclinique.testController">

    <!-- Navbar at the top -->
    <top>
        <HBox style="-fx-background-color: #2c3e50; -fx-padding: 10px;" spacing="10">
            <Button text="Dashboard" onAction="#loadDashboard" style="-fx-text-fill: white; -fx-background-color: transparent;" />
            <Button text="Appointment" onAction="#loadRendezVous" style="-fx-text-fill: white; -fx-background-color: transparent;" />
            <Button text="Profile" onAction="#loadProfil" style="-fx-text-fill: white; -fx-background-color: transparent;" />
            <Button text="Logout" onAction="#loadTest" style="-fx-text-fill: white; -fx-background-color: transparent;" />
        </HBox>
    </top>

    <!-- Default content area -->
    <center>
        <!-- Content will be dynamically loaded here -->
    </center>
</BorderPane>
